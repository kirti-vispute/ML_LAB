        "import re\n",
        "import pandas as pd\n",
        "import matplotlib.pyplot as plt\n",
        "from collections import Counter\n",
        "\n",
        "plt.style.use(\"ggplot\")\n"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "from google.colab import files\n",
        "\n",
        "uploaded = files.upload()\n",
        "filename = list(uploaded.keys())[0]\n",
        "\n",
        "with open(filename, \"r\", encoding=\"utf-8\") as f:\n",
        "    chat_text = f.read()\n",
        "\n",
        "print(\"File uploaded successfully!\")\n"
      ],
      "metadata": {
        "id": "J--Q3RT7H5Vy"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def parse_chat(chat_text):\n",
        "    pattern = (\n",
        "        r\"(\\d{1,2}[/-]\\d{1,2}[/-]\\d{2,4}),?\\s\"\n",
        "        r\"(\\d{1,2}:\\d{2}(?:\\s?[ap]m)?)\\s[-â€“]\\s\"\n",
        "    )\n",
        "\n",
        "    data = re.split(pattern, chat_text)\n",
        "\n",
        "    if data[0].strip() == \"\":\n",
        "        data = data[1:]\n",
        "\n",
        "    dates = data[0::3]\n",
        "    times = data[1::3]\n",
        "    messages = data[2::3]\n",
        "\n",
        "    df = pd.DataFrame({\n",
        "        \"date\": dates,\n",
        "        \"time\": times,\n",
        "        \"raw_message\": messages\n",
        "    })\n",
        "\n",
        "    df[\"datetime\"] = pd.to_datetime(\n",
        "        df[\"date\"] + \" \" + df[\"time\"],\n",
        "        errors=\"coerce\",\n",
        "        dayfirst=True\n",
        "    )\n",
        "\n",
        "    return df\n",
        "\n",
        "\n",
        "def split_user_message(df):\n",
        "    users = []\n",
        "    messages = []\n",
        "\n",
        "    for msg in df[\"raw_message\"]:\n",
        "        if \": \" in msg:\n",
        "            user, text = msg.split(\": \", 1)\n",
        "        else:\n",
        "            user, text = \"System\", msg\n",
        "\n",
        "        users.append(user)\n",
        "        messages.append(text)\n",
        "\n",
        "    df[\"user\"] = users\n",
        "    df[\"message\"] = messages\n",
        "    return df\n",
        "\n",
        "\n",
        "df = parse_chat(chat_text)\n",
        "df = split_user_message(df)\n",
        "\n",
        "df.head()\n"
      ],
      "metadata": {
        "id": "nbh145pQH7Qs"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "print(\"Total Messages:\", df.shape[0])\n",
        "print(\"Total Users:\", df[\"user\"].nunique())\n",
        "\n",
        "df[\"user\"].value_counts().head()\n"
      ],
      "metadata": {
        "id": "JTaoHl10H8yf"
