    {
      "cell_type": "code",
      "source": [
        "df[\"date_only\"] = df[\"datetime\"].dt.date\n",
        "daily_messages = df.groupby(\"date_only\").size()\n",
        "\n",
        "plt.figure(figsize=(10,5))\n",
        "plt.plot(daily_messages)\n",
        "plt.title(\"Daily Message Trend\")\n",
        "plt.xlabel(\"Date\")\n",
        "plt.ylabel(\"Number of Messages\")\n",
        "plt.show()\n"
      ],
      "metadata": {
        "id": "tUf5MciuH-K9"
